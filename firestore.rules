rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // For the beta testing phase, allow any authenticated user to read/write.
    // This prevents anonymous access but allows testers full functionality.
    // More granular rules will be applied before a public launch.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
