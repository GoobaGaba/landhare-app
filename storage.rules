
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the listings folder
    match /listings/{listingId}/{fileName} {
      allow read;
      
      // Allow write only for authenticated users.
      // You might want to add further restrictions, e.g.,
      // checking the file size or type, or matching the userId
      // in the path with request.auth.uid.
      allow write: if request.auth != null;
    }

    // You could add rules for user profile pictures here
    // match /avatars/{userId}/{fileName} {
    //   allow read;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
