rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'listings' folder
    match /listings/{allPaths=**} {
      allow read: if true;
      // Allow write only by authenticated users, to their own user-id subfolder
      allow write: if request.auth != null && allPaths.split('/')[0] == request.auth.uid;
    }

    // Fallback to deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
